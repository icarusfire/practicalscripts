package com.example.prometheus;

import java.util.Set;

import org.openrewrite.ExecutionContext;
import org.openrewrite.java.JavaTemplate;
import org.openrewrite.java.JavaVisitor;
import org.openrewrite.java.tree.J;
import org.openrewrite.recipe.Recipe;

/**
 * Replaces legacy  Counter.build("name","help")
 *      with        Counter.builder().name("name").help("help")
 *
 * Works whether the call is imported
 *      Counter.build(...)
 * or fully-qualified
 *      io.prometheus.client.Counter.build(...)
 */
public class ReplaceStaticBuildWithBuilder extends Recipe {

    /* ── OpenRewrite metadata ─────────────────────────────────────────── */
    @Override
    public String getDisplayName() {
        return "Convert *.build(name, help) to fluent builder() pattern";
    }

    @Override
    public String getDescription() {
        return "Prometheus-metrics 1.x no longer uses the static build(...) "
             + "factory; this recipe rewrites it to builder().name().help().";
    }

    /* ── Visitor that performs the transformation ─────────────────────── */
    @Override
    public JavaVisitor<ExecutionContext> getVisitor() {
        return new JavaVisitor<>() {

            /* 1️⃣  Class names we accept (simple names only) */
            private final Set<String> METRICS =
                Set.of("Counter", "Gauge", "Histogram", "Summary");

            /* 2️⃣  Template that generates the new call chain
                   #{any()}  – placeholder for the class expression (Counter)
                   Placeholders 2 & 3 are the original arguments.             */
            private final JavaTemplate TEMPLATE = JavaTemplate.builder(this::getCursor,
                    "#{any()}.builder()"
                  + ".name(#{any(java.lang.String)})"
                  + ".help(#{any(java.lang.String)})")
                  .imports("io.prometheus.metrics.core.metrics.*") // added if needed
                  .build();

            @Override
            public J visitMethodInvocation(J.MethodInvocation mi, ExecutionContext ctx) {

                // First visit children so nested expressions are handled
                mi = (J.MethodInvocation) super.visitMethodInvocation(mi, ctx);

                /* ---- Match criteria ---------------------------------------
                   • method name is "build"
                   • exactly two arguments
                   • select exists and its *simple* name is Counter|Gauge|…
                   --------------------------------------------------------- */
                if ("build".equals(mi.getSimpleName())
                        && mi.getArguments().size() == 2
                        && mi.getSelect() != null
                        && METRICS.contains(simpleNameOf(mi.getSelect()))) {

                    /* Replace the old node with the template output */
                    return mi.withTemplate(
                            TEMPLATE,
                            mi.getCoordinates().replace(),   // swap this node
                            mi.getSelect(),                  // #{any()} → Counter expression
                            mi.getArguments().get(0),        // metric name
                            mi.getArguments().get(1));       // help text
                }
                return mi;
            }

            /* Extracts the last identifier of an expression, e.g.
                 io.prometheus.client.Counter  → Counter
                 Counter                       → Counter                       */
            private String simpleNameOf(J expression) {
                if (expression instanceof J.Identifier id)          return id.getSimpleName();
                if (expression instanceof J.FieldAccess fa)        return fa.getSimpleName();
                return "";
            }
        };
    }
}


