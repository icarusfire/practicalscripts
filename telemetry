new pom

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.example</groupId>        <!-- replace with your root -->
    <artifactId>parent</artifactId>       <!-- root pom's <artifactId> -->
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>prometheus-migration-recipes</artifactId>
  <packaging>jar</packaging>

  <!-- Only compile-time: the JAR is not shipped with the app -->
  <dependencies>
    <dependency>
      <groupId>org.openrewrite</groupId>
      <artifactId>rewrite-java</artifactId>
      <version>${openrewrite.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <!-- ensure rewrite.yml ends up in the JAR -->
  <build>
    <resources>
      <resource>
        <directory>${project.basedir}</directory>
        <includes>
          <include>rewrite.yml</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>

